// Stats
      document.querySelectorAll("[data-stat]").forEach(el => {
        const key = el.getAttribute("data-stat");
        const val = CONFIG.stats && Object.prototype.hasOwnProperty.call(CONFIG.stats, key) ? CONFIG.stats[key] : null;
        el.textContent = (val === null || val === undefined || val === "") ? "‚Äî" : String(val);
      });

      // Theme toggle (no storage by design)
      const root = document.documentElement;
      const label = document.getElementById("themeLabel");
      const btn = document.getElementById("themeBtn");

      // Expose a derived scheme label to allow minor styling differences
      const syncSchemeAttr = () => {
        const theme = root.getAttribute("data-theme") || "auto";
        let scheme = theme;
        if (theme === "auto"){
          scheme = window.matchMedia && window.matchMedia("(prefers-color-scheme: light)").matches ? "light" : "dark";
        }
        root.setAttribute("data-scheme", scheme);
      };

      const updateThemeLabel = () => {
        const t = root.getAttribute("data-theme") || "auto";
        if (label) label.textContent = t.charAt(0).toUpperCase() + t.slice(1);
        syncSchemeAttr();
      };

      if (btn){
        btn.addEventListener("click", () => {
          const current = root.getAttribute("data-theme") || "auto";
          const cycle = CONFIG.themeCycle || ["auto","dark","light"];
          const idx = Math.max(0, cycle.indexOf(current));
          const next = cycle[(idx + 1) % cycle.length];
          root.setAttribute("data-theme", next);
          updateThemeLabel();
        });
      }

      // Update on system theme changes when in auto mode
      try{
        const mq = window.matchMedia("(prefers-color-scheme: light)");
        mq.addEventListener("change", () => {
          if ((root.getAttribute("data-theme") || "auto") === "auto") updateThemeLabel();
        });
      }catch(e){}

      updateThemeLabel();

      // JSON-LD: keep it correct and non-inflated (no made-up stats)
      const schema = [
