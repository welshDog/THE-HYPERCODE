# 5) CSS additions + foot columns
style_match = re.search(r"<style>[\s\S]*?</style>", html2)
if style_match:
    style_block = style_match.group(0)
    # update .foot columns
    style_block = re.sub(
        r"\.foot\{\s*display:grid;\s*gap:\s*var\(--grid-gap\);\s*grid-template-columns:\s*1\.4fr\s+1fr\s+1fr;",
        ".foot{\n      display:grid; gap: var(--grid-gap);\n      grid-template-columns: 1.4fr 1fr 1fr 1fr;",
        style_block
    )
    extra_css = """
    /* --- Getting Started code blocks --- */
    .code-block{
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 1.1em;
      overflow-x: auto;
      font-family: var(--mono);
      font-size: 0.92em;
      line-height: 1.6;
    }
    .code-block pre{ margin:0; }
    .code-block code{ font-family: var(--mono); background: none; padding: 0; }

    .note{
      margin-top: 18px;
      padding: 14px 16px;
      border: 1px solid var(--border);
      background: rgba(255,255,255,.02);
      border-radius: 14px;
    }

    .gs-grid{ margin-top: 18px; }
    @media (max-width: 920px){
      .gs-grid > .card[style*="grid-column: span 4"]{ grid-column: span 12 !important; }
    }
    """
    if ".code-block" not in style_block:
        style_block = style_block.replace("</style>", extra_css + "\n</style>")
    html2 = html2.replace(style_match.group(0), style_block, 1)

# 6) JS link wiring additions
apply_links = re.search(r"// Apply links[\s\S]*?// Stats", html2)
if apply_links:
    block = apply_links.group(0)
    extra_lines = [
        '      setHref("btnExamples", L.examples);\n',
        '      setHref("footDocs", L.docs);\n',
        '      setHref("footExamples", L.examples);\n',
        '      setHref("footResearch", L.research);\n',
        '      setHref("footDiscussions", L.githubDiscussions);\n',
    ]
    for line in extra_lines:
        if line.strip() not in block:
            block = block.replace("      // Stats", line + "      // Stats")
    html2 = html2.replace(apply_links.group(0), block, 1)

# 7) Add GitHub auto-stats right after stats block
stats_block = re.search(r"// Stats\n\s*document\.querySelectorAll\(\"\\[data-stat\\]\"\)\.forEach\([\s\S]*?\);\n", html2)
if stats_block and "hydrateGitHubStats" not in html2:
    gh_js = """
      // Auto-fill GitHub stats (best-effort; falls back gracefully)
      (function hydrateGitHubStats(){
        try{
          const repoUrl = (CONFIG.links && CONFIG.links.githubRepo) || "";
          const m = repoUrl.match(/github\\.com\\/([^\\/]+)\\/([^\\/#?]+)/i);
          const owner = (CONFIG.repo && CONFIG.repo.owner) || (m ? m[1] : null);
          const repo  = (CONFIG.repo && CONFIG.repo.name)  || (m ? m[2].replace(/\\.git$/i,"") : null);
          if(!owner || !repo) return;

          const setStat = (key, val) => {
            const el = document.querySelector(`[data-stat="${key}"]`);
            if(el && val !== null && val !== undefined) el.textContent = String(val);
          };

          fetch(`https://api.github.com/repos/${owner}/${repo}`)
            .then(r => r.ok ? r.json() : null)
            .then(data => {
              if(!data) return;
              if (CONFIG.stats.stars == null) setStat("stars", data.stargazers_count);
              if (CONFIG.stats.issues == null) setStat("issues", data.open_issues_count);
            })
            .catch(() => {});
        }catch(e){ /* no-op */ }
      })();
"""
    html2 = html2.replace(stats_block.group(0), stats_block.group(0) + gh_js, 1)

# 8) Set meta description from CONFIG.site.description (using existing helper setMeta)
if "meta[name=\"description\"]" in html2:
    # inject once near canonical line if not already injected
    if "CONFIG.site.description" not in html2:
        pass

# Find the canonical setter line and ensure we set description there
canonical_line = '      setLink("canonical", CONFIG.site.url);\n'
if canonical_line in html2 and "meta[name=\"description\"]" not in html2.split(canonical_line)[1][:200]:
    html2 = html2.replace(canonical_line, canonical_line + "      setMeta('meta[name=\"description\"]', CONFIG.site.description);\n", 1)

# Write back
Path(index_path).write_text(html2, encoding="utf-8")

