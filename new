from pathlib import Path
html_new = Path(index_path).read_text(encoding="utf-8")

if "hydrateGitHubStats" not in html_new:
    insertion = """
      // Auto-fill GitHub stats (best-effort; falls back gracefully)
      (function hydrateGitHubStats(){
        try{
          const repoUrl = (CONFIG.links && CONFIG.links.githubRepo) || "";
          const m = repoUrl.match(/github\\.com\\/([^\\/]+)\\/([^\\/#?]+)/i);
          const owner = (CONFIG.repo && CONFIG.repo.owner) || (m ? m[1] : null);
          const repo  = (CONFIG.repo && CONFIG.repo.name)  || (m ? m[2].replace(/\\.git$/i,"") : null);
          if(!owner || !repo) return;

          const setStat = (key, val) => {
            const el = document.querySelector(`[data-stat="${key}"]`);
            if(el && val !== null && val !== undefined) el.textContent = String(val);
          };

          fetch(`https://api.github.com/repos/${owner}/${repo}`)
            .then(r => r.ok ? r.json() : null)
            .then(data => {
              if(!data) return;
              if (CONFIG.stats.stars == null) setStat("stars", data.stargazers_count);
              if (CONFIG.stats.issues == null) setStat("issues", data.open_issues_count);
            })
            .catch(() => {});
        }catch(e){ /* no-op */ }
      })();
"""
    marker = '      document.querySelectorAll("[data-stat]").forEach(el => {\n'
    # insert after the end of the forEach block (first occurrence)
    end_pat = r'document\.querySelectorAll\("\[data-stat\]"\)\.forEach\(el => \{\n[\s\S]*?\n\s*\}\);\n'
    match = re.search(end_pat, html_new)
    if match:
        html_new = html_new[:match.end()] + insertion + html_new[match.end():]
    else:
        # fallback: insert right after the forEach closing
        close = html_new.find('      });\n\n      // Theme toggle', html_new.find(marker))
        if close != -1:
            html_new = html_new[:close+8] + insertion + html_new[close+8:]
    Path(index_path).write_text(html_new, encoding="utf-8")

