from PIL import Image, ImageDraw, ImageFont
import os, math

og_path = os.path.join(index_dir, "og.png")

W, H = 1200, 630
img = Image.new("RGB", (W, H), (10, 12, 18))
draw = ImageDraw.Draw(img)

# gradient-ish bands
for y in range(H):
    t = y / (H-1)
    r = int(10 + 20*t)
    g = int(12 + 30*t)
    b = int(18 + 60*t)
    draw.line([(0,y),(W,y)], fill=(r,g,b))

# accent glow circles
for (cx, cy, rad, col) in [(250, 170, 260, (120, 80, 255)), (950, 520, 320, (0, 210, 255)), (980, 160, 220, (255, 140, 0))]:
    for rr in range(rad, 0, -6):
        alpha = int(255 * (1 - rr/rad) * 0.14)
        if alpha <= 0: 
            continue
        overlay = Image.new("RGBA", (W, H), (0,0,0,0))
        od = ImageDraw.Draw(overlay)
        od.ellipse((cx-rr, cy-rr, cx+rr, cy+rr), fill=col + (alpha,))
        img = Image.alpha_composite(img.convert("RGBA"), overlay).convert("RGB")
        draw = ImageDraw.Draw(img)

# Load a default font
try:
    font_big = ImageFont.truetype("DejaVuSans.ttf", 88)
    font_mid = ImageFont.truetype("DejaVuSans.ttf", 34)
    font_small = ImageFont.truetype("DejaVuSans.ttf", 26)
except:
    font_big = ImageFont.load_default()
    font_mid = ImageFont.load_default()
    font_small = ImageFont.load_default()

# Title and subtitle
title = "HyperCode"
subtitle = "Neurodivergent-first ‚Ä¢ Text + Visual ‚Ä¢ Classical + Quantum + Molecular"

# measure & draw
tw, th = draw.textbbox((0,0), title, font=font_big)[2:]
draw.text((80, 210), title, font=font_big, fill=(245, 246, 255))
draw.text((80, 320), subtitle, font=font_mid, fill=(210, 214, 230))

# small footer
draw.text((80, 500), "Open-source language + tooling experiments", font=font_small, fill=(190, 196, 220))

# minimal hex logo
hex_center = (1020, 270)
size = 130
points = []
for i in range(6):
    ang = math.radians(60*i - 30)
    points.append((hex_center[0] + size*math.cos(ang), hex_center[1] + size*math.sin(ang)))
draw.polygon(points, outline=(240, 240, 255), width=6)

# inner lines
draw.line([points[0], points[3]], fill=(240,240,255), width=4)
draw.line([points[1], points[4]], fill=(240,240,255), width=4)

img.save(og_path, "PNG")
og_path

