      // Auto-fill GitHub stats (best-effort; falls back gracefully)
      (function hydrateGitHubStats(){
        try{
          const repoUrl = (CONFIG.links && CONFIG.links.githubRepo) || "";
          const m = repoUrl.match(/github\\.com\\/([^\\/]+)\\/([^\\/#?]+)/i);
          const owner = (CONFIG.repo && CONFIG.repo.owner) || (m ? m[1] : null);
          const repo  = (CONFIG.repo && CONFIG.repo.name)  || (m ? m[2].replace(/\\.git$/i,"") : null);
          if(!owner || !repo) return;

          const setStat = (key, val) => {
            const el = document.querySelector(`[data-stat="${key}"]`);
            if(el && val !== null && val !== undefined) el.textContent = String(val);
          };

          fetch(`https://api.github.com/repos/${owner}/${repo}`)
            .then(r => r.ok ? r.json() : null)
            .then(data => {
              if(!data) return;
              if (CONFIG.stats.stars == null) setStat("stars", data.stargazers_count);
              if (CONFIG.stats.issues == null) setStat("issues", data.open_issues_count);
            })
            .catch(() => {});
        }catch(e){ /* no-op */ }
      })();
"""
        html2 = html2.replace(after_stats, after_stats + gh_js, 1)

