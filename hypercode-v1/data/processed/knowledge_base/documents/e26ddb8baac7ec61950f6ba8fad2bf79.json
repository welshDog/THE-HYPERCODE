  "content": "<!doctype html>\n<html lang=\"en\">\n  <head>\n    <meta charset=\"UTF-8\" />\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n    <title>HyperCode CodeMap - Interactive Architecture</title>\n    <style>\n      :root {\n        --color-bg-primary: #0a0e27;\n        --color-bg-secondary: #1a1f3a;\n        --color-surface: #252b4a;\n        --color-accent-purple: #b794f6;\n        --color-accent-cyan: #32b8c6;\n        --color-accent-green: #4ade80;\n        --color-accent-orange: #fb923c;\n        --color-accent-red: #f87171;\n        --color-text-primary: #f5f5f5;\n        --color-text-secondary: #a7a9a9;\n        --color-border: rgba(167, 169, 169, 0.3);\n      }\n\n      * {\n        box-sizing: border-box;\n        margin: 0;\n        padding: 0;\n      }\n\n      body {\n        font-family: -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, sans-serif;\n        background: var(--color-bg-primary);\n        color: var(--color-text-primary);\n        overflow: hidden;\n      }\n\n      .container {\n        display: flex;\n        height: 100vh;\n      }\n\n      /* Sidebar */\n      .sidebar {\n        width: 280px;\n        background: var(--color-bg-secondary);\n        border-right: 1px solid var(--color-border);\n        padding: 20px;\n        overflow-y: auto;\n      }\n\n      .sidebar h1 {\n        font-size: 24px;\n        margin-bottom: 8px;\n        background: linear-gradient(\n          135deg,\n          var(--color-accent-cyan),\n          var(--color-accent-purple)\n        );\n        -webkit-background-clip: text;\n        -webkit-text-fill-color: transparent;\n        background-clip: text;\n      }\n\n      .sidebar .subtitle {\n        font-size: 12px;\n        color: var(--color-text-secondary);\n        margin-bottom: 24px;\n      }\n\n      .filter-section {\n        margin-bottom: 24px;\n      }\n\n      .filter-section h3 {\n        font-size: 14px;\n        font-weight: 600;\n        margin-bottom: 12px;\n        color: var(--color-accent-cyan);\n      }\n\n      .filter-btn {\n        display: flex;\n        align-items: center;\n        width: 100%;\n        padding: 10px 12px;\n        margin-bottom: 8px;\n        background: var(--color-surface);\n        border: 1px solid var(--color-border);\n        border-radius: 8px;\n        color: var(--color-text-primary);\n        font-size: 13px;\n        cursor: pointer;\n        transition: all 0.2s;\n      }\n\n      .filter-btn:hover {\n        background: rgba(50, 184, 198, 0.1);\n        border-color: var(--color-accent-cyan);\n      }\n\n      .filter-btn.active {\n        background: rgba(50, 184, 198, 0.2);\n        border-color: var(--color-accent-cyan);\n      }\n\n      .filter-btn .color-dot {\n        width: 12px;\n        height: 12px;\n        border-radius: 50%;\n        margin-right: 10px;\n      }\n\n      .legend {\n        margin-top: 32px;\n        padding-top: 20px;\n        border-top: 1px solid var(--color-border);\n      }\n\n      .legend h3 {\n        font-size: 12px;\n        font-weight: 600;\n        margin-bottom: 12px;\n        color: var(--color-text-secondary);\n        text-transform: uppercase;\n        letter-spacing: 0.5px;\n      }\n\n      .legend-item {\n        display: flex;\n        align-items: center;\n        font-size: 12px;\n        margin-bottom: 8px;\n        color: var(--color-text-secondary);\n      }\n\n      .legend-item .color-box {\n        width: 16px;\n        height: 16px;\n        border-radius: 4px;\n        margin-right: 8px;\n      }\n\n      /* Canvas Area */\n      .canvas-area {\n        flex: 1;\n        position: relative;\n        overflow: hidden;\n      }\n\n      .canvas {\n        width: 100%;\n        height: 100%;\n        position: relative;\n        cursor: grab;\n      }\n\n      .canvas.grabbing {\n        cursor: grabbing;\n      }\n\n      .canvas-content {\n        position: absolute;\n        width: 3000px;\n        height: 2000px;\n        transform-origin: 0 0;\n      }\n\n      /* Nodes */\n      .node {\n        position: absolute;\n        min-width: 180px;\n        background: var(--color-surface);\n        border: 2px solid;\n        border-radius: 12px;\n        padding: 16px;\n        cursor: pointer;\n        transition: all 0.3s;\n        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);\n      }\n\n      .node:hover {\n        transform: scale(1.05);\n        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);\n        z-index: 10;\n      }\n\n      .node.core {\n        border-color: var(--color-accent-purple);\n      }\n      .node.ai {\n        border-color: var(--color-accent-cyan);\n      }\n      .node.parsing {\n        border-color: var(--color-accent-green);\n      }\n      .node.devops {\n        border-color: var(--color-accent-orange);\n      }\n      .node.ui {\n        border-color: var(--color-accent-red);\n      }\n\n      .node-header {\n        display: flex;\n        align-items: center;\n        margin-bottom: 8px;\n      }\n\n      .node-icon {\n        width: 24px;\n        height: 24px;\n        border-radius: 6px;\n        margin-right: 10px;\n        display: flex;\n        align-items: center;\n        justify-content: center;\n        font-size: 14px;\n      }\n\n      .node-title {\n        font-size: 14px;\n        font-weight: 600;\n      }\n\n      .node-desc {\n        font-size: 11px;\n        color: var(--color-text-secondary);\n        line-height: 1.4;\n      }\n\n      .node-tags {\n        display: flex;\n        flex-wrap: wrap;\n        gap: 4px;\n        margin-top: 8px;\n      }\n\n      .node-tag {\n        font-size: 9px;\n        padding: 2px 6px;\n        border-radius: 4px;\n        background: rgba(255, 255, 255, 0.1);\n      }\n\n      /* Connections */\n      svg.connections {\n        position: absolute;\n        top: 0;\n        left: 0;\n        width: 100%;\n        height: 100%;\n        pointer-events: none;\n        z-index: 0;\n      }\n\n      .connection-line {\n        stroke-width: 2;\n        fill: none;\n        opacity: 0.4;\n      }\n\n      .connection-line.core {\n        stroke: var(--color-accent-purple);\n      }\n      .connection-line.ai {\n        stroke: var(--color-accent-cyan);\n      }\n      .connection-line.parsing {\n        stroke: var(--color-accent-green);\n      }\n      .connection-line.devops {\n        stroke: var(--color-accent-orange);\n      }\n      .connection-line.ui {\n        stroke: var(--color-accent-red);\n      }\n\n      /* Controls */\n      .controls {\n        position: absolute;\n        bottom: 20px;\n        right: 20px;\n        display: flex;\n        gap: 8px;\n        z-index: 100;\n      }\n\n      .control-btn {\n        width: 40px;\n        height: 40px;\n        background: var(--color-surface);\n        border: 1px solid var(--color-border);\n        border-radius: 8px;\n        color: var(--color-text-primary);\n        cursor: pointer;\n        display: flex;\n        align-items: center;\n        justify-content: center;\n        font-size: 18px;\n        transition: all 0.2s;\n      }\n\n      .control-btn:hover {\n        background: rgba(50, 184, 198, 0.2);\n        border-color: var(--color-accent-cyan);\n      }\n\n      /* Info Panel */\n      .info-panel {\n        position: absolute;\n        top: 20px;\n        right: 20px;\n        width: 320px;\n        background: var(--color-bg-secondary);\n        border: 1px solid var(--color-border);\n        border-radius: 12px;\n        padding: 20px;\n        display: none;\n        z-index: 100;\n        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);\n      }\n\n      .info-panel.visible {\n        display: block;\n      }\n\n      .info-panel h2 {\n        font-size: 18px;\n        margin-bottom: 12px;\n      }\n\n      .info-panel .close-btn {\n        position: absolute;\n        top: 16px;\n        right: 16px;\n        background: none;\n        border: none;\n        color: var(--color-text-secondary);\n        font-size: 20px;\n        cursor: pointer;\n        padding: 4px;\n      }\n\n      .info-section {\n        margin-bottom: 16px;\n      }\n\n      .info-section h4 {\n        font-size: 12px;\n        color: var(--color-accent-cyan);\n        margin-bottom: 8px;\n        text-transform: uppercase;\n      }\n\n      .info-section p {\n        font-size: 13px;\n        line-height: 1.6;\n        color: var(--color-text-secondary);\n      }\n\n      .info-links {\n        display: flex;\n        gap: 8px;\n      }\n\n      .info-link {\n        padding: 8px 12px;\n        background: var(--color-surface);\n        border: 1px solid var(--color-border);\n        border-radius: 6px;\n        color: var(--color-text-primary);\n        text-decoration: none;\n        font-size: 12px;\n        transition: all 0.2s;\n      }\n\n      .info-link:hover {\n        background: rgba(50, 184, 198, 0.2);\n        border-color: var(--color-accent-cyan);\n      }\n    </style>\n  </head>\n  <body>\n    <div class=\"container\">\n      <!-- Sidebar -->\n      <div class=\"sidebar\">\n        <h1>ðŸš€ HyperCode</h1>\n        <div class=\"subtitle\">Interactive Architecture Map</div>\n\n        <div class=\"filter-section\">\n          <h3>Filter Layers</h3>\n          <button class=\"filter-btn active\" data-layer=\"all\">\n            <span\n              class=\"color-dot\"\n              style=\"background: linear-gradient(135deg, #b794f6, #32b8c6)\"\n            ></span>\n            Show All Systems\n          </button>\n          <button class=\"filter-btn active\" data-layer=\"core\">\n            <span\n              class=\"color-dot\"\n              style=\"background: var(--color-accent-purple)\"\n            ></span>\n            Core VM & Runtime\n          </button>\n          <button class=\"filter-btn active\" data-layer=\"ai\">\n            <span class=\"color-dot\" style=\"background: var(--color-accent-cyan)\"></span>\n            AI Integration Layer\n          </button>\n          <button class=\"filter-btn active\" data-layer=\"parsing\">\n            <span\n              class=\"color-dot\"\n              style=\"background: var(--color-accent-green)\"\n            ></span>\n            Parser & Compiler\n          </button>\n          <button class=\"filter-btn active\" data-layer=\"devops\">\n            <span\n              class=\"color-dot\"\n              style=\"background: var(--color-accent-orange)\"\n            ></span>\n            DevOps & CI/CD\n          </button>\n          <button class=\"filter-btn active\" data-layer=\"ui\">\n            <span class=\"color-dot\" style=\"background: var(--color-accent-red)\"></span>\n            UI & Accessibility\n          </button>\n        </div>\n\n        <div class=\"legend\">\n          <h3>Legend</h3>\n          <div class=\"legend-item\">\n            <div class=\"color-box\" style=\"background: var(--color-accent-purple)\"></div>\n            Core Logic & VM\n          </div>\n          <div class=\"legend-item\">\n            <div class=\"color-box\" style=\"background: var(--color-accent-cyan)\"></div>\n            AI/ML Adapters\n          </div>\n          <div class=\"legend-item\">\n            <div class=\"color-box\" style=\"background: var(--color-accent-green)\"></div>\n            Language Tools\n          </div>\n          <div class=\"legend-item\">\n            <div class=\"color-box\" style=\"background: var(--color-accent-orange)\"></div>\n            Automation\n          </div>\n          <div class=\"legend-item\">\n            <div class=\"color-box\" style=\"background: var(--color-accent-red)\"></div>\n            User Interface\n          </div>\n        </div>\n      </div>\n\n      <!-- Canvas Area -->\n      <div class=\"canvas-area\">\n        <div class=\"canvas\" id=\"canvas\">\n          <svg class=\"connections\" id=\"connections\"></svg>\n          <div class=\"canvas-content\" id=\"canvasContent\"></div>\n        </div>\n\n        <!-- Controls -->\n        <div class=\"controls\">\n          <button class=\"control-btn\" id=\"zoomIn\" title=\"Zoom In\">+</button>\n          <button class=\"control-btn\" id=\"zoomOut\" title=\"Zoom Out\">âˆ’</button>\n          <button class=\"control-btn\" id=\"resetView\" title=\"Reset View\">âŸ²</button>\n        </div>\n\n        <!-- Info Panel -->\n        <div class=\"info-panel\" id=\"infoPanel\">\n          <button class=\"close-btn\" id=\"closeInfo\">Ã—</button>\n          <h2 id=\"infoTitle\">Node Title</h2>\n          <div class=\"info-section\">\n            <h4>Description</h4>\n            <p id=\"infoDesc\">Details about this component...</p>\n          </div>\n          <div class=\"info-section\">\n            <h4>Technologies</h4>\n            <p id=\"infoTech\">Tech stack info...</p>\n          </div>\n          <div class=\"info-section\">\n            <h4>Quick Links</h4>\n            <div class=\"info-links\">\n              <a href=\"#\" class=\"info-link\" id=\"linkDocs\">ðŸ“š Docs</a>\n              <a href=\"#\" class=\"info-link\" id=\"linkCode\">ðŸ’» Code</a>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n\n    <script>\n      // Node definitions\n      const nodes = [\n        // Core VM & Runtime\n        {\n          id: \"vm-core\",\n          type: \"core\",\n          title: \"HyperVM Core\",\n          desc: \"Main execution engine with spatial memory model\",\n          x: 800,\n          y: 400,\n          icon: \"âš¡\",\n          tech: \"Rust/C++, Custom bytecode\",\n          tags: [\"Critical\", \"Neurodivergent-Optimized\"],\n        },\n        {\n          id: \"memory\",\n          type: \"core\",\n          title: \"Spatial Memory\",\n          desc: \"2D/3D addressable memory system\",\n          x: 1000,\n          y: 300,\n          icon: \"ðŸ§ \",\n          tech: \"Custom allocation, Visual debugger\",\n          tags: [\"Visual\", \"Core\"],\n        },\n        {\n          id: \"executor\",\n          type: \"core\",\n          title: \"Instruction Executor\",\n          desc: \"Multi-paradigm instruction processor\",\n          x: 1000,\n          y: 500,\n          icon: \"âš™ï¸\",\n          tech: \"JIT compilation, Interpreter fallback\",\n          tags: [\"Performance\"],\n        },\n\n        // AI Integration\n        {\n          id: \"ai-router\",\n          type: \"ai\",\n          title: \"AI Router\",\n          desc: \"Universal adapter for GPT/Claude/Local models\",\n          x: 600,\n          y: 200,\n          icon: \"ðŸ¤–\",\n          tech: \"REST/gRPC, Async queue\",\n          tags: [\"Universal\", \"Plugin\"],\n        },\n        {\n          id: \"ai-codegen\",\n          type: \"ai\",\n          title: \"Code Generator\",\n          desc: \"AI-powered HyperCode generation\",\n          x: 400,\n          y: 300,\n          icon: \"âœ¨\",\n          tech: \"LLM prompting, AST validation\",\n          tags: [\"AI-First\"],\n        },\n        {\n          id: \"ai-optimize\",\n          type: \"ai\",\n          title: \"Optimizer\",\n          desc: \"AI-driven performance optimization\",\n          x: 400,\n          y: 450,\n          icon: \"ðŸŽ¯\",\n          tech: \"ML models, Profiling integration\",\n          tags: [\"Smart\"],\n        },\n\n        // Parser & Compiler\n        {\n          id: \"lexer\",\n          type: \"parsing\",\n          title: \"Lexer\",\n          desc: \"Tokenizes HyperCode source\",\n          x: 1200,\n          y: 200,\n          icon: \"ðŸ“–\",\n          tech: \"Hand-written, Error-tolerant\",\n          tags: [\"Frontend\"],\n        },\n        {\n          id: \"parser\",\n          type: \"parsing\",\n          title: \"Parser\",\n          desc: \"Builds AST from tokens\",\n          x: 1400,\n          y: 200,\n          icon: \"ðŸŒ³\",\n          tech: \"LL(k), PEG hybrid\",\n          tags: [\"Frontend\"],\n        },\n        {\n          id: \"analyzer\",\n          type: \"parsing\",\n          title: \"Semantic Analyzer\",\n          desc: \"Type checking & validation\",\n          x: 1400,\n          y: 350,\n          icon: \"ðŸ”\",\n          tech: \"Inference engine, Error recovery\",\n          tags: [\"Safety\"],\n        },\n        {\n          id: \"codegen\",\n          type: \"parsing\",\n          title: \"Bytecode Gen\",\n          desc: \"Emits VM instructions\",\n          x: 1200,\n          y: 450,\n          icon: \"ðŸ“¦\",\n          tech: \"Optimizing backend\",\n          tags: [\"Backend\"],\n        },\n\n        // DevOps & CI/CD\n        {\n          id: \"ci-pipeline\",\n          type: \"devops\",\n          title: \"CI/CD Pipeline\",\n          desc: \"Automated testing & deployment\",\n          x: 800,\n          y: 700,\n          icon: \"ðŸ”„\",\n          tech: \"GitHub Actions, Custom runners\",\n          tags: [\"Automation\"],\n        },\n        {\n          id: \"docs-gen\",\n          type: \"devops\",\n          title: \"Docs Generator\",\n          desc: \"Living documentation system\",\n          x: 600,\n          y: 800,\n          icon: \"ðŸ“\",\n          tech: \"AI-assisted, Auto-update\",\n          tags: [\"Knowledge\"],\n        },\n        {\n          id: \"quality\",\n          type: \"devops\",\n          title: \"Quality Gate\",\n          desc: \"Automated code review & metrics\",\n          x: 1000,\n          y: 800,\n          icon: \"âœ…\",\n          tech: \"Static analysis, Benchmarks\",\n          tags: [\"Quality\"],\n        },\n\n        // UI & Accessibility\n        {\n          id: \"visual-editor\",\n          type: \"ui\",\n          title: \"Visual Editor\",\n          desc: \"Spatial code editor for neurodivergent minds\",\n          x: 1400,\n          y: 600,\n          icon: \"ðŸŽ¨\",\n          tech: \"Web/Desktop, Canvas-based\",\n          tags: [\"Accessible\", \"Visual\"],\n        },\n        {\n          id: \"debugger\",\n          type: \"ui\",\n          title: \"Visual Debugger\",\n          desc: \"Interactive spatial debugging UI\",\n          x: 1200,\n          y: 700,\n          icon: \"ðŸ›\",\n          tech: \"Real-time visualization\",\n          tags: [\"UX\"],\n        },\n        {\n          id: \"repl\",\n          type: \"ui\",\n          title: \"Interactive REPL\",\n          desc: \"Instant feedback environment\",\n          x: 1400,\n          y: 800,\n          icon: \"ðŸ’¬\",\n          tech: \"Web-based, Multi-output\",\n          tags: [\"Learning\"],\n        },\n      ];\n\n      // Connections\n      const connections = [\n        // AI to Core\n        { from: \"ai-router\", to: \"vm-core\", type: \"ai\" },\n        { from: \"ai-codegen\", to: \"parser\", type: \"ai\" },\n        { from: \"ai-optimize\", to: \"executor\", type: \"ai\" },\n\n        // Parsing pipeline\n        { from: \"lexer\", to: \"parser\", type: \"parsing\" },\n        { from: \"parser\", to: \"analyzer\", type: \"parsing\" },\n        { from: \"analyzer\", to: \"codegen\", type: \"parsing\" },\n        { from: \"codegen\", to: \"vm-core\", type: \"parsing\" },\n\n        // Core VM internals\n        { from: \"vm-core\", to: \"memory\", type: \"core\" },\n        { from: \"vm-core\", to: \"executor\", type: \"core\" },\n\n        // UI connections\n        { from: \"visual-editor\", to: \"lexer\", type: \"ui\" },\n        { from: \"debugger\", to: \"vm-core\", type: \"ui\" },\n        { from: \"repl\", to: \"vm-core\", type: \"ui\" },\n\n        // DevOps connections\n        { from: \"ci-pipeline\", to: \"quality\", type: \"devops\" },\n        { from: \"ci-pipeline\", to: \"docs-gen\", type: \"devops\" },\n        { from: \"quality\", to: \"vm-core\", type: \"devops\" },\n      ];\n\n      // State\n      let scale = 1;\n      let offsetX = -600;\n      let offsetY = -100;\n      let isDragging = false;\n      let startX = 0;\n      let startY = 0;\n      let activeFilters = new Set([\"all\", \"core\", \"ai\", \"parsing\", \"devops\", \"ui\"]);\n\n      // Elements\n      const canvas = document.getElementById(\"canvas\");\n      const canvasContent = document.getElementById(\"canvasContent\");\n      const connectionsSVG = document.getElementById(\"connections\");\n      const infoPanel = document.getElementById(\"infoPanel\");\n\n      // Initialize\n      function init() {\n        renderNodes();\n        renderConnections();\n        setupEventListeners();\n        updateTransform();\n      }\n\n      // Render nodes\n      function renderNodes() {\n        canvasContent.innerHTML = \"\";\n        nodes.forEach((node) => {\n          const nodeEl = document.createElement(\"div\");\n          nodeEl.className = `node ${node.type}`;\n          nodeEl.style.left = node.x + \"px\";\n          nodeEl.style.top = node.y + \"px\";\n          nodeEl.dataset.id = node.id;\n          nodeEl.dataset.type = node.type;\n\n          const iconBg = {\n            core: \"var(--color-accent-purple)\",\n            ai: \"var(--color-accent-cyan)\",\n            parsing: \"var(--color-accent-green)\",\n            devops: \"var(--color-accent-orange)\",\n            ui: \"var(--color-accent-red)\",\n          }[node.type];\n\n          nodeEl.innerHTML = `\n                    <div class=\"node-header\">\n                        <div class=\"node-icon\" style=\"background: ${iconBg}\">${\n                          node.icon\n                        }</div>\n                        <div class=\"node-title\">${node.title}</div>\n                    </div>\n                    <div class=\"node-desc\">${node.desc}</div>\n                    <div class=\"node-tags\">\n                        ${node.tags\n                          .map((tag) => `<span class=\"node-tag\">${tag}</span>`)\n                          .join(\"\")}\n                    </div>\n                `;\n\n          nodeEl.addEventListener(\"click\", () => showInfo(node));\n          canvasContent.appendChild(nodeEl);\n        });\n      }\n\n      // Render connections\n      function renderConnections() {\n        connectionsE.innerHTML = \"\";\n        connections.forEach((conn) => {\n          const fromNode = nodes.find((n) => n.id === conn.from);\n          const toNode = nodes.find((n) => n.id === conn.to);\n          if (!fromNode || !toNode) return;\n\n          const fromX = fromNode.x + 90;\n          const fromY = fromNode.y + 60;\n          const toX = toNode.x + 90;\n          const toY = toNode.y + 60;\n\n          const path = document.createElementNS(\"http://www.w3.org/2000/svg\", \"path\");\n          const midY = (fromY + toY) / 2;\n          const d = `M ${fromX} ${fromY} C ${fromX} ${midY}, ${toX} ${midY}, ${toX} ${toY}`;\n\n          path.setAttribute(\"d\", d);\n          path.classList.add(\"connection-line\", conn.type);\n          path.dataset.from = conn.from;\n          path.dataset.to = conn.to;\n\n          connectionsVG.appendChild(path);\n        });\n      }\n\n      // Show info panel\n      function showInfo(node) {\n        document.getElementById(\"infoTitle\").textContent = node.icon + \" \" + node.title;\n        document.getElementById(\"infoDesc\").textContent = node.desc;\n        document.getElementById(\"infoTech\").textContent = node.tech;\n        infoPanel.classList.add(\"visible\");\n      }\n\n      // Filter handling\n      document.querySelectorAll(\".filter-btn\").forEach((btn) => {\n        btn.addEventListener(\"click\", () => {\n          const layer = btn.dataset.layer;\n\n          if (layer === \"all\") {\n            if (activeFilters.has(\"all\")) {\n              activeFilters.clear();\n              document\n                .querySelectorAll(\".filter-btn\")\n                .forEach((b) => b.classList.remove(\"active\"));\n            } else {\n              activeFilters = new Set([\"all\", \"core\", \"ai\", \"parsing\", \"devops\", \"ui\"]);\n              document\n                .querySelectorAll(\".filter-btn\")\n                .forEach((b) => b.classList.add(\"active\"));\n            }\n          } else {\n            btn.classList.toggle(\"active\");\n            if (activeFilters.has(layer)) {\n              activeFilters.delete(layer);\n              if (activeFilters.size === 0) {\n                document.querySelector('[data-layer=\"all\"]').classList.remove(\"active\");\n              }\n            } else {\n              activeFilters.add(layer);\n              if (activeFilters.size === 5) {\n                activeFilters.add(\"all\");\n                document.querySelector('[data-layer=\"all\"]').classList.add(\"active\");\n              }\n            }\n          }\n\n          applyFilters();\n        });\n      });\n\n      function applyFilters() {\n        document.querySelectorAll(\".node\").forEach((node) => {\n          const type = node.dataset.type;\n          node.style.display =\n            activeFilters.has(type) || activeFilters.has(\"all\") ? \"block\" : \"none\";\n        });\n\n        document.querySelectorAll(\".connection-line\").forEach((line) => {\n          const fromNode = nodes.find((n) => n.id === line.dataset.from);\n          const toNode = nodes.find((n) => n.id === line.dataset.to);\n          const visible =\n            (activeFilters.has(fromNode.type) || activeFilters.has(\"all\")) &&\n            (activeFilters.has(toNode.type) || activeFilters.has(\"all\"));\n          line.style.display = visible ? \"block\" : \"none\";\n        });\n      }\n\n      // Pan and zoom\n      function updateTransform() {\n        canvasContent.style.transform = `translate(${offsetX}px, ${offsetY}px) scale(${scale})`;\n      }\n\n      canvas.addEventListener(\"mousedown\", (e) => {\n        if (\n          e.target === canvas ||\n          e.target === canvasContent ||\n          e.target === connectionsVG\n        ) {\n          isDragging = true;\n          startX = e.clientX - offsetX;\n          startY = e.clientY - offsetY;\n          canvas.classList.add(\"grabbing\");\n        }\n      });\n\n      canvas.addEventListener(\"mousemove\", (e) => {\n        if (isDragging) {\n          offsetX = e.clientX - startX;\n          offsetY = e.clientY - startY;\n          updateTransform();\n        }\n      });\n\n      canvas.addEventListener(\"mouseup\", () => {\n        isDragging = false;\n        canvas.classList.remove(\"grabbing\");\n      });\n\n      canvas.addEventListener(\"mouseleave\", () => {\n        isDragging = false;\n        canvas.classList.remove(\"grabbing\");\n      });\n\n      // Zoom controls\n      document.getElementById(\"zoomIn\").addEventListener(\"click\", () => {\n        scale = Math.min(scale * 1.2, 3);\n        updateTransform();\n      });\n\n      document.getElementById(\"zoomOut\").addEventListener(\"click\", () => {\n        scale = Math.max(scale / 1.2, 0.3);\n        updateTransform();\n      });\n\n      document.getElementById(\"resetView\").addEventListener(\"click\", () => {\n        scale = 1;\n        offsetX = -600;\n        offsetY = -100;\n        updateTransform();\n      });\n\n      // Close info panel\n      document.getElementById(\"closeInfo\").addEventListener(\"click\", () => {\n        infoPanel.classList.remove(\"visible\");\n      });\n\n      function setupEventListeners() {\n        // Already set up above\n      }\n\n      // Start\n      init();\n    </script>\n  </body>\n</html>\n",
