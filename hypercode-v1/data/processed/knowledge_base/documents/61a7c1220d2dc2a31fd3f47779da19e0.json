  "content": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>HyperCode Spec Kit Generator</title>\n    <style>\n        :root {\n            --color-white: rgba(255, 255, 255, 1);\n            --color-cream-50: rgba(252, 252, 249, 1);\n            --color-cream-100: rgba(255, 255, 253, 1);\n            --color-gray-200: rgba(245, 245, 245, 1);\n            --color-gray-300: rgba(167, 169, 169, 1);\n            --color-gray-400: rgba(119, 124, 124, 1);\n            --color-slate-500: rgba(98, 108, 113, 1);\n            --color-slate-900: rgba(19, 52, 59, 1);\n            --color-teal-500: rgba(33, 128, 141, 1);\n            --color-teal-600: rgba(29, 116, 128, 1);\n            --color-teal-700: rgba(26, 104, 115, 1);\n            --color-red-400: rgba(255, 84, 89, 1);\n            --color-orange-500: rgba(168, 75, 47, 1);\n\n            --color-brown-600-rgb: 94, 82, 64;\n            --color-teal-500-rgb: 33, 128, 141;\n\n            --color-background: var(--color-cream-50);\n            --color-surface: var(--color-cream-100);\n            --color-text: var(--color-slate-900);\n            --color-text-secondary: var(--color-slate-500);\n            --color-primary: var(--color-teal-500);\n            --color-primary-hover: var(--color-teal-600);\n            --color-primary-active: var(--color-teal-700);\n            --color-secondary: rgba(var(--color-brown-600-rgb), 0.12);\n            --color-border: rgba(var(--color-brown-600-rgb), 0.2);\n            --color-error: var(--color-red-400);\n            --color-success: var(--color-teal-500);\n            --color-focus-ring: rgba(var(--color-teal-500-rgb), 0.4);\n\n            --space-8: 8px;\n            --space-12: 12px;\n            --space-16: 16px;\n            --space-20: 20px;\n            --space-24: 24px;\n            --space-32: 32px;\n\n            --radius-base: 8px;\n            --radius-lg: 12px;\n\n            --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.04);\n            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.04);\n\n            --font-size-sm: 12px;\n            --font-size-base: 14px;\n            --font-size-lg: 16px;\n            --font-size-xl: 18px;\n\n            --duration-normal: 250ms;\n            --ease-standard: cubic-bezier(0.16, 1, 0.3, 1);\n        }\n\n        * {\n            box-sizing: border-box;\n        }\n\n        html {\n            font-size: var(--font-size-base);\n            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;\n            line-height: 1.5;\n            color: var(--color-text);\n            background-color: var(--color-background);\n            -webkit-font-smoothing: antialiased;\n        }\n\n        body {\n            margin: 0;\n            padding: 0;\n        }\n\n        h1, h2, h3 {\n            margin: 0;\n            font-weight: 600;\n            line-height: 1.2;\n        }\n\n        h1 {\n            font-size: var(--font-size-xl);\n        }\n\n        h2 {\n            font-size: var(--font-size-lg);\n        }\n\n        p {\n            margin: 0 0 var(--space-16) 0;\n        }\n\n        code {\n            font-family: 'Monaco', 'Menlo', monospace;\n            font-size: calc(var(--font-size-base) * 0.95);\n        }\n\n        .container {\n            width: 100%;\n            max-width: 1200px;\n            margin: 0 auto;\n            padding: var(--space-16);\n        }\n\n        .header {\n            background: linear-gradient(135deg, #208498, #1a6873);\n            color: white;\n            padding: var(--space-32) var(--space-16);\n            border-radius: var(--radius-lg);\n            margin-bottom: var(--space-32);\n            box-shadow: var(--shadow-md);\n        }\n\n        .header h1 {\n            color: white;\n            margin-bottom: var(--space-8);\n        }\n\n        .header p {\n            color: rgba(255, 255, 255, 0.9);\n            margin: 0;\n            font-size: var(--font-size-base);\n        }\n\n        .grid {\n            display: grid;\n            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));\n            gap: var(--space-24);\n            margin-bottom: var(--space-32);\n        }\n\n        .card {\n            background-color: var(--color-surface);\n            border-radius: var(--radius-lg);\n            border: 1px solid var(--color-border);\n            box-shadow: var(--shadow-sm);\n            overflow: hidden;\n            transition: all var(--duration-normal) var(--ease-standard);\n        }\n\n        .card:hover {\n            box-shadow: var(--shadow-md);\n            transform: translateY(-2px);\n        }\n\n        .card__header {\n            padding: var(--space-16);\n            border-bottom: 1px solid var(--color-border);\n            background: rgba(var(--color-brown-600-rgb), 0.05);\n        }\n\n        .card__header h2 {\n            margin: 0;\n        }\n\n        .card__body {\n            padding: var(--space-16);\n        }\n\n        .form-group {\n            margin-bottom: var(--space-16);\n        }\n\n        .form-label {\n            display: block;\n            margin-bottom: var(--space-8);\n            font-weight: 500;\n            font-size: var(--font-size-sm);\n        }\n\n        .form-control {\n            width: 100%;\n            padding: var(--space-8) var(--space-12);\n            font-size: var(--font-size-base);\n            color: var(--color-text);\n            background-color: var(--color-surface);\n            border: 1px solid var(--color-border);\n            border-radius: var(--radius-base);\n            transition: all var(--duration-normal) var(--ease-standard);\n            font-family: inherit;\n        }\n\n        .form-control:focus {\n            outline: none;\n            border-color: var(--color-primary);\n            box-shadow: 0 0 0 3px var(--color-focus-ring);\n        }\n\n        textarea.form-control {\n            resize: vertical;\n            min-height: 100px;\n            font-family: 'Monaco', 'Menlo', monospace;\n            font-size: var(--font-size-sm);\n        }\n\n        .btn {\n            display: inline-flex;\n            align-items: center;\n            justify-content: center;\n            padding: var(--space-8) var(--space-16);\n            border-radius: var(--radius-base);\n            font-size: var(--font-size-base);\n            font-weight: 500;\n            cursor: pointer;\n            transition: all var(--duration-normal) var(--ease-standard);\n            border: none;\n            text-decoration: none;\n        }\n\n        .btn:focus-visible {\n            outline: none;\n            box-shadow: 0 0 0 3px var(--color-focus-ring);\n        }\n\n        .btn--primary {\n            background: var(--color-primary);\n            color: white;\n        }\n\n        .btn--primary:hover {\n            background: var(--color-primary-hover);\n        }\n\n        .btn--primary:active {\n            background: var(--color-primary-active);\n        }\n\n        .btn--secondary {\n            background: rgba(var(--color-brown-600-rgb), 0.12);\n            color: var(--color-text);\n        }\n\n        .btn--secondary:hover {\n            background: rgba(var(--color-brown-600-rgb), 0.2);\n        }\n\n        .btn--sm {\n            padding: var(--space-8) var(--space-12);\n            font-size: var(--font-size-sm);\n        }\n\n        .btn--full-width {\n            width: 100%;\n        }\n\n        .btn:disabled {\n            opacity: 0.5;\n            cursor: not-allowed;\n        }\n\n        .output {\n            background: var(--color-gray-200);\n            border: 1px solid var(--color-border);\n            border-radius: var(--radius-base);\n            padding: var(--space-16);\n            font-family: 'Monaco', 'Menlo', monospace;\n            font-size: var(--font-size-sm);\n            overflow-x: auto;\n            max-height: 400px;\n            overflow-y: auto;\n            white-space: pre-wrap;\n            word-break: break-word;\n            margin-top: var(--space-16);\n        }\n\n        .copy-btn {\n            margin-top: var(--space-12);\n        }\n\n        .section {\n            margin-bottom: var(--space-32);\n        }\n\n        .section__title {\n            font-size: var(--font-size-lg);\n            font-weight: 600;\n            margin-bottom: var(--space-16);\n            color: var(--color-text);\n        }\n\n        .tabs {\n            display: flex;\n            gap: var(--space-8);\n            margin-bottom: var(--space-16);\n            border-bottom: 1px solid var(--color-border);\n        }\n\n        .tab {\n            padding: var(--space-12) var(--space-16);\n            background: none;\n            border: none;\n            border-bottom: 2px solid transparent;\n            font-size: var(--font-size-base);\n            cursor: pointer;\n            transition: all var(--duration-normal) var(--ease-standard);\n            color: var(--color-text-secondary);\n        }\n\n        .tab.active {\n            color: var(--color-primary);\n            border-bottom-color: var(--color-primary);\n        }\n\n        .tab:hover:not(.active) {\n            color: var(--color-text);\n        }\n\n        .tab-content {\n            display: none;\n        }\n\n        .tab-content.active {\n            display: block;\n        }\n\n        .status {\n            padding: var(--space-12);\n            border-radius: var(--radius-base);\n            font-size: var(--font-size-sm);\n            margin-top: var(--space-16);\n        }\n\n        .status--success {\n            background: rgba(33, 128, 141, 0.1);\n            color: var(--color-success);\n            border: 1px solid var(--color-success);\n        }\n\n        .status--info {\n            background: rgba(98, 108, 113, 0.1);\n            color: var(--color-text-secondary);\n            border: 1px solid var(--color-text-secondary);\n        }\n\n        .download-list {\n            list-style: none;\n            padding: 0;\n            margin: var(--space-16) 0;\n        }\n\n        .download-list li {\n            padding: var(--space-12);\n            background: rgba(var(--color-teal-500-rgb), 0.05);\n            border: 1px solid rgba(var(--color-teal-500-rgb), 0.2);\n            border-radius: var(--radius-base);\n            margin-bottom: var(--space-8);\n            display: flex;\n            justify-content: space-between;\n            align-items: center;\n        }\n\n        .emoji {\n            margin-right: var(--space-8);\n        }\n\n        .flex {\n            display: flex;\n            gap: var(--space-8);\n        }\n\n        .flex-col {\n            flex-direction: column;\n        }\n\n        /* Focus Mode Styles */\n        .focus-mode-toggle {\n            position: fixed;\n            top: var(--space-16);\n            right: var(--space-16);\n            z-index: 1000;\n        }\n\n        .focus-mode-toggle .btn {\n            border-radius: var(--radius-full);\n            width: 48px;\n            height: 48px;\n            padding: 0;\n        }\n\n        body.focus-active {\n            --focus-display: none;\n        }\n\n        body.focus-active .grid,\n        body.focus-active .section:nth-of-type(3),\n        body.focus-active .section:nth-of-type(4) {\n            display: none;\n        }\n\n        body.focus-active .header {\n            margin-bottom: var(--space-16);\n        }\n\n        body.focus-active .section:nth-of-type(1) {\n            margin-bottom: var(--space-16);\n        }\n\n        /* Progress Stepper Styles */\n        .progress-stepper {\n            display: flex;\n            gap: var(--space-12);\n            margin-bottom: var(--space-24);\n            align-items: center;\n        }\n\n        .step {\n            display: flex;\n            flex-direction: column;\n            align-items: center;\n            flex: 1;\n            position: relative;\n        }\n\n        .step::after {\n            content: '';\n            position: absolute;\n            top: 24px;\n            left: 50%;\n            right: -50%;\n            height: 2px;\n            background: var(--color-border);\n        }\n\n        .step:last-child::after {\n            display: none;\n        }\n\n        .step.completed::after {\n            background: var(--color-success);\n        }\n\n        .step-dot {\n            width: 48px;\n            height: 48px;\n            border-radius: 50%;\n            background: var(--color-surface);\n            border: 2px solid var(--color-border);\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            font-weight: 600;\n            font-size: var(--font-size-base);\n            color: var(--color-text-secondary);\n            margin-bottom: var(--space-12);\n            transition: all var(--duration-normal) var(--ease-standard);\n            position: relative;\n            z-index: 1;\n        }\n\n        .step.active .step-dot {\n            background: var(--color-primary);\n            color: white;\n            border-color: var(--color-primary);\n            box-shadow: 0 0 0 4px rgba(var(--color-teal-500-rgb), 0.2);\n        }\n\n        .step.completed .step-dot {\n            background: var(--color-success);\n            color: white;\n            border-color: var(--color-success);\n        }\n\n        .step-label {\n            font-size: var(--font-size-sm);\n            font-weight: 500;\n            color: var(--color-text-secondary);\n            text-align: center;\n            max-width: 100px;\n        }\n\n        .step.active .step-label {\n            color: var(--color-primary);\n            font-weight: 600;\n        }\n\n        .step.completed .step-label {\n            color: var(--color-success);\n        }\n\n        /* Step Content Visibility */\n        .step-content {\n            display: none;\n        }\n\n        .step-content.active {\n            display: block;\n            animation: slideIn var(--duration-normal) var(--ease-standard);\n        }\n\n        @keyframes slideIn {\n            from {\n                opacity: 0;\n                transform: translateY(8px);\n            }\n            to {\n                opacity: 1;\n                transform: translateY(0);\n            }\n        }\n\n        @media (max-width: 768px) {\n            .container {\n                padding: var(--space-12);\n            }\n\n            .grid {\n                grid-template-columns: 1fr;\n            }\n\n            .tabs {\n                flex-wrap: wrap;\n            }\n\n            .progress-stepper {\n                gap: var(--space-8);\n            }\n\n            .step::after {\n                display: none;\n            }\n\n            .step-label {\n                font-size: var(--font-size-sm);\n                max-width: 60px;\n            }\n\n            .step-dot {\n                width: 40px;\n                height: 40px;\n                font-size: calc(var(--font-size-sm) * 0.9);\n            }\n\n            .focus-mode-toggle {\n                top: var(--space-12);\n                right: var(--space-12);\n            }\n\n            .focus-mode-toggle .btn {\n                width: 40px;\n                height: 40px;\n                font-size: var(--font-size-sm);\n            }\n        }\n\n        .flex-col {\n            flex-direction: column;\n        }\n\n        /* Focus Mode Styles */\n        .focus-mode-toggle {\n            position: fixed;\n            top: var(--space-16);\n            right: var(--space-16);\n            z-index: 1000;\n        }\n\n        .focus-mode-toggle .btn {\n            border-radius: var(--radius-full);\n            width: 48px;\n            height: 48px;\n            padding: 0;\n        }\n\n        body.focus-active {\n            --focus-display: none;\n        }\n\n        body.focus-active .grid,\n        body.focus-active .section:nth-of-type(3),\n        body.focus-active .section:nth-of-type(4) {\n            display: none;\n        }\n\n        body.focus-active .header {\n            margin-bottom: var(--space-16);\n        }\n\n        body.focus-active .section:nth-of-type(1) {\n            margin-bottom: var(--space-16);\n        }\n\n        /* Progress Stepper Styles */\n        .progress-stepper {\n            display: flex;\n            gap: var(--space-12);\n            margin-bottom: var(--space-24);\n            align-items: center;\n        }\n\n        .step {\n            display: flex;\n            flex-direction: column;\n            align-items: center;\n            flex: 1;\n            position: relative;\n        }\n\n        .step::after {\n            content: '';\n            position: absolute;\n            top: 24px;\n            left: 50%;\n            right: -50%;\n            height: 2px;\n            background: var(--color-border);\n        }\n\n        .step:last-child::after {\n            display: none;\n        }\n\n        .step.completed::after {\n            background: var(--color-success);\n        }\n\n        .step-dot {\n            width: 48px;\n            height: 48px;\n            border-radius: 50%;\n            background: var(--color-surface);\n            border: 2px solid var(--color-border);\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            font-weight: 600;\n            font-size: var(--font-size-base);\n            color: var(--color-text-secondary);\n            margin-bottom: var(--space-12);\n            transition: all var(--duration-normal) var(--ease-standard);\n            position: relative;\n            z-index: 1;\n        }\n\n        .step.active .step-dot {\n            background: var(--color-primary);\n            color: white;\n            border-color: var(--color-primary);\n            box-shadow: 0 0 0 4px rgba(var(--color-teal-500-rgb), 0.2);\n        }\n\n        .step.completed .step-dot {\n            background: var(--color-success);\n            color: white;\n            border-color: var(--color-success);\n        }\n\n        .step-label {\n            font-size: var(--font-size-sm);\n            font-weight: 500;\n            color: var(--color-text-secondary);\n            text-align: center;\n            max-width: 100px;\n        }\n\n        .step.active .step-label {\n            color: var(--color-primary);\n            font-weight: 600;\n        }\n\n        .step.completed .step-label {\n            color: var(--color-success);\n        }\n\n        /* Step Content Visibility */\n        .step-content {\n            display: none;\n        }\n\n        .step-content.active {\n            display: block;\n            animation: slideIn var(--duration-normal) var(--ease-standard);\n        }\n\n        @keyframes slideIn {\n            from {\n                opacity: 0;\n                transform: translateY(8px);\n            }\n            to {\n                opacity: 1;\n                transform: translateY(0);\n            }\n        }\n\n        @media (max-width: 768px) {\n            .container {\n                padding: var(--space-12);\n            }\n\n            .grid {\n                grid-template-columns: 1fr;\n            }\n\n            .tabs {\n                flex-wrap: wrap;\n            }\n\n            .progress-stepper {\n                gap: var(--space-8);\n            }\n\n            .step::after {\n                display: none;\n            }\n\n            .step-label {\n                font-size: var(--font-size-sm);\n                max-width: 60px;\n            }\n\n            .step-dot {\n                width: 40px;\n                height: 40px;\n                font-size: calc(var(--font-size-sm) * 0.9);\n            }\n\n            .focus-mode-toggle {\n                top: var(--space-12);\n                right: var(--space-12);\n            }\n\n            .focus-mode-toggle .btn {\n                width: 40px;\n                height: 40px;\n                font-size: var(--font-size-sm);\n            }\n        }\n    </style>\n</head>\n<body>\n    <div class=\"focus-mode-toggle\">\n        <button class=\"btn btn--primary btn--sm\" id=\"focusToggle\" onclick=\"toggleFocusMode()\" title=\"Toggle Focus Mode\">üéØ</button>\n    </div>\n\n    <div class=\"container\">\n        <div class=\"header\">\n            <h1>üöÄ HyperCode Spec Kit Generator</h1>\n            <p>Generate Spec Kit templates for your HyperCode projects in seconds</p>\n        </div>\n\n        <!-- Progress Stepper -->\n        <div class=\"progress-stepper\">\n            <div class=\"step active\" data-step=\"1\">\n                <div class=\"step-dot\">1</div>\n                <div class=\"step-label\">Project Info</div>\n            </div>\n            <div class=\"step\" data-step=\"2\">\n                <div class=\"step-dot\">2</div>\n                <div class=\"step-label\">Generate</div>\n            </div>\n            <div class=\"step\" data-step=\"3\">\n                <div class=\"step-dot\">3</div>\n                <div class=\"step-label\">Review</div>\n            </div>\n            <div class=\"step\" data-step=\"4\">\n                <div class=\"step-dot\">4</div>\n                <div class=\"step-label\">Deploy</div>\n            </div>\n        </div>\n\n        <!-- Step 1: Project Info -->\n        <div class=\"step-content active\" data-step=\"1\">\n            <div class=\"grid\">\n            <div class=\"card\">\n                <div class=\"card__header\">\n                    <h2>üìã Project Info</h2>\n                </div>\n                <div class=\"card__body\">\n                    <div class=\"form-group\">\n                        <label class=\"form-label\">Project Name</label>\n                        <input type=\"text\" id=\"projectName\" class=\"form-control\" placeholder=\"e.g., HyperCode CLI Tools\" value=\"My HyperCode Project\">\n                    </div>\n                    <div class=\"form-group\">\n                        <label class=\"form-label\">Project Description</label>\n                        <textarea id=\"projectDesc\" class=\"form-control\" placeholder=\"What does this project do?\">A cutting-edge HyperCode project built with spatial logic and neurodivergent-first design.</textarea>\n                    </div>\n                    <div class=\"form-group\">\n                        <label class=\"form-label\">Primary Use Case</label>\n                        <input type=\"text\" id=\"useCase\" class=\"form-control\" placeholder=\"e.g., Quantum computing, AI reasoning, DNA sequencing\" value=\"AI-powered code generation\">\n                    </div>\n                </div>\n            </div>\n\n            <div class=\"card\">\n                <div class=\"card__header\">\n                    <h2>‚öôÔ∏è Configuration</h2>\n                </div>\n                <div class=\"card__body\">\n                    <div class=\"form-group\">\n                        <label class=\"form-label\">Team/Author</label>\n                        <input type=\"text\" id=\"author\" class=\"form-control\" placeholder=\"Your name or team\" value=\"HyperCode Dev Team\">\n                    </div>\n                    <div class=\"form-group\">\n                        <label class=\"form-label\">GitHub Repo URL (optional)</label>\n                        <input type=\"text\" id=\"repoUrl\" class=\"form-control\" placeholder=\"https://github.com/user/hypercode-project\">\n                    </div>\n                    <div class=\"form-group\">\n                        <label class=\"form-label\">Target AI Agents</label>\n                        <div style=\"font-size: var(--font-size-sm); color: var(--color-text-secondary); margin-top: var(--space-8);\">\n                            ‚úì Claude Code<br>\n                            ‚úì GitHub Copilot<br>\n                            ‚úì Cursor<br>\n                            ‚úì Custom Agents\n                        </div>\n                    </div>\n                </div>\n            </div>\n            <button class=\"btn btn--primary btn--full-width\" onclick=\"nextStep()\" style=\"margin-top: var(--space-24);\">Next: Generate Templates ‚Üí</button>\n        </div>\n        </div>\n\n        <!-- Step 2: Generate Templates -->\n        <div class=\"step-content\" data-step=\"2\">\n            <div class=\"section\">\n                <div class=\"section__title\">üì¶ Generate Templates</div>\n            <div class=\"tabs\">\n                <button class=\"tab active\" onclick=\"switchTab(event, 'constitution')\">constitution.md</button>\n                <button class=\"tab\" onclick=\"switchTab(event, 'specify-prompt')\">Specify Prompt</button>\n                <button class=\"tab\" onclick=\"switchTab(event, 'plan-prompt')\">Plan Prompt</button>\n                <button class=\"tab\" onclick=\"switchTab(event, 'tasks-prompt')\">Tasks Prompt</button>\n            </div>\n\n            <div id=\"constitution\" class=\"tab-content active\">\n                <div class=\"card\">\n                    <div class=\"card__header\">\n                        <h2>constitution.md</h2>\n                    </div>\n                    <div class=\"card__body\">\n                        <p>This is your project's constitution‚Äîcore values, design principles, and guidelines for AI agents.</p>\n                        <div id=\"constitutionOutput\" class=\"output\"></div>\n                        <button class=\"btn btn--primary btn--sm copy-btn\" onclick=\"copyToClipboard('constitutionOutput')\">üìã Copy to Clipboard</button>\n                        <button class=\"btn btn--secondary btn--sm copy-btn\" onclick=\"downloadFile('constitution.md', 'constitutionOutput')\">‚¨áÔ∏è Download</button>\n                    </div>\n                </div>\n            </div>\n\n            <div id=\"specify-prompt\" class=\"tab-content\">\n                <div class=\"card\">\n                    <div class=\"card__header\">\n                        <h2>/specify Prompt Template</h2>\n                    </div>\n                    <div class=\"card__body\">\n                        <p>Used by AI agents to generate detailed specifications for HyperCode projects.</p>\n                        <div id=\"specifyOutput\" class=\"output\"></div>\n                        <button class=\"btn btn--primary btn--sm copy-btn\" onclick=\"copyToClipboard('specifyOutput')\">üìã Copy to Clipboard</button>\n                        <button class=\"btn btn--secondary btn--sm copy-btn\" onclick=\"downloadFile('hypercode.specify.md', 'specifyOutput')\">‚¨áÔ∏è Download</button>\n                    </div>\n                </div>\n            </div>\n\n            <div id=\"plan-prompt\" class=\"tab-content\">\n                <div class=\"card\">\n                    <div class=\"card__header\">\n                        <h2>/plan Prompt Template</h2>\n                    </div>\n                    <div class=\"card__body\">\n                        <p>Guides AI agents to create architecture plans with spatial, minimal-noise HyperCode design.</p>\n                        <div id=\"planOutput\" class=\"output\"></div>\n                        <button class=\"btn btn--primary btn--sm copy-btn\" onclick=\"copyToClipboard('planOutput')\">üìã Copy to Clipboard</button>\n                        <button class=\"btn btn--secondary btn--sm copy-btn\" onclick=\"downloadFile('hypercode.plan.md', 'planOutput')\">‚¨áÔ∏è Download</button>\n                    </div>\n                </div>\n            </div>\n\n            <div id=\"tasks-prompt\" class=\"tab-content\">\n                <div class=\"card\">\n                    <div class=\"card__header\">\n                        <h2>/tasks Prompt Template</h2>\n                    </div>\n                    <div class=\"card__body\">\n                        <p>Breaks specifications into HyperCode-native task chunks for implementation.</p>\n                        <div id=\"tasksOutput\" class=\"output\"></div>\n                        <button class=\"btn btn--primary btn--sm copy-btn\" onclick=\"copyToClipboard('tasksOutput')\">üìã Copy to Clipboard</button>\n                        <button class=\"btn btn--secondary btn--sm copy-btn\" onclick=\"downloadFile('hypercode.tasks.md', 'tasksOutput')\">‚¨áÔ∏è Download</button>\n                    </div>\n                </div>\n            </div>\n\n                <div class=\"status status--success\" style=\"margin-top: var(--space-24);\">\n                    ‚úÖ All templates generated! Ready to review and deploy.\n                </div>\n                <div style=\"display: flex; gap: var(--space-12); margin-top: var(--space-24);\">\n                    <button class=\"btn btn--secondary\" onclick=\"previousStep()\" style=\"flex: 1;\">‚Üê Back</button>\n                    <button class=\"btn btn--primary\" onclick=\"nextStep()\" style=\"flex: 1;\">Review Templates ‚Üí</button>\n                </div>\n            </div>\n        </div>\n\n        <!-- Step 3: Review Output -->\n        <div class=\"step-content\" data-step=\"3\">\n            <div class=\"section\">\n                <div class=\"section__title\">üìã Review Your Templates</div>\n            <div class=\"card\">\n                <div class=\"card__body\">\n                    <h3>Step 1: Create folder structure</h3>\n                    <div class=\"output\">mkdir -p .specify/memory\nmkdir -p .github/prompts</div>\n\n                    <h3 style=\"margin-top: var(--space-24);\">Step 2: Add constitution</h3>\n                    <p>Copy <code>constitution.md</code> to <code>.specify/memory/constitution.md</code></p>\n\n                    <h3 style=\"margin-top: var(--space-24);\">Step 3: Add prompt templates</h3>\n                    <p>Copy the three prompt files to <code>.github/prompts/</code>:</p>\n                    <ul class=\"download-list\">\n                        <li>\n                            <span><span class=\"emoji\">üìÑ</span> hypercode.specify.md</span>\n                        </li>\n                        <li>\n                            <span><span class=\"emoji\">üìÑ</span> hypercode.plan.md</span>\n                        </li>\n                        <li>\n                            <span><span class=\"emoji\">üìÑ</span> hypercode.tasks.md</span>\n                        </li>\n                    </ul>\n\n                    <h3 style=\"margin-top: var(--space-24);\">Step 4: Configure your AI agent</h3>\n                    <p>In your editor (VS Code + Copilot, Cursor, Claude Code), set up custom instructions to reference these templates when working with HyperCode.</p>\n\n                    <div class=\"status status--success\" style=\"margin-top: var(--space-16);\">\n                        üéâ You're ready! All templates are in your repo. Your AI agents will now think in HyperCode terms automatically.\n                    </div>\n                    <button class=\"btn btn--secondary btn--full-width\" onclick=\"previousStep()\" style=\"margin-top: var(--space-24);\">‚Üê Review Templates</button>\n                </div>\n            </div>\n        </div>\n\n        <!-- Info Section (visible on all steps) -->\n        <div class=\"section\">\n            <div class=\"section__title\">üéØ What This Enables</div>\n            <div class=\"card\">\n                <div class=\"card__body\">\n                    <p><strong>Before:</strong> Manual prompting. \"Hey Claude, write HyperCode that does X...\"</p>\n                    <p><strong>After:</strong> Structured workflows. Your constitution + templates guide AI agents automatically.</p>\n                    <p style=\"margin-top: var(--space-24); color: var(--color-text-secondary);\">\n                        This is <strong>Option A</strong> of the HyperCode Spec Kit integration. It's lightweight, framework-agnostic, and works with any AI agent today.\n                    </p>\n                </div>\n            </div>\n        </div>\n    </div>\n\n    <script>\n        function generateConstitution() {\n            const projectName = document.getElementById('projectName').value || 'HyperCode Project';\n            const projectDesc = document.getElementById('projectDesc').value || 'A HyperCode project';\n            const author = document.getElementById('author').value || 'HyperCode Team';\n\n            const content = `# HyperCode Project Constitution\n\n**Project:** ${projectName}\n**Author:** ${author}\n**Created:** ${new Date().toISOString().split('T')[0]}\n\n---\n\n## üß† Core Principles\n\nThis project is built on HyperCode's foundational philosophy: **Programming for neurodivergent minds.**\n\n### 1. **Spatial Logic First**\n- Code is organized spatially, not linearly\n- Visual hierarchy matters as much as syntax\n- Minimize cognitive load through layout and structure\n\n### 2. **Minimal Noise**\n- No unnecessary punctuation or symbols\n- Readable at a glance\n- Accessible to dyslexic readers\n- ADHD-friendly: quick to scan, hyperfocus-enabling\n\n### 3. **Universal AI Compatibility**\n- Works with Claude, GitHub Copilot, Gemini, Ollama, and custom models\n- No vendor lock-in\n- Flexible, future-proof design\n\n### 4. **Experimental & Cutting-Edge**\n- HyperCode explores quantum computing patterns\n- DNA/biological computation inspired syntax\n- AI-native reasoning structures\n\n---\n\n## üéØ Project Context\n\n**What we're building:**\n${projectDesc}\n\n**Why it matters:**\n- Demonstrates HyperCode's real-world capability\n- Showcases neurodivergent-friendly development workflows\n- Proves spec-driven development with AI agents\n\n---\n\n## ü§ñ AI Agent Guidelines\n\nWhen AI agents work on this project, they should:\n\n1. **Think in HyperCode patterns**\n   - Prefer spatial organization over procedural\n   - Use HyperCode's built-in structures for clarity\n   - Minimize boilerplate and noise\n\n2. **Follow accessibility-first design**\n   - Code should be readable to ADHD minds (scannable)\n   - Avoid nested complexity where possible\n   - Comment \"why\" not \"what\"\n\n3. **Respect the specification**\n   - Implement what specs say, not what seems \"better\"\n   - Ask for clarification if ambiguous\n   - Validate assumptions in tasks\n\n4. **Keep code experiments alive**\n   - Document learnings\n   - Add edge cases to test suite\n   - Iterate from specification feedback\n\n---\n\n## üìã Development Workflow\n\nThis project uses **Spec-Driven Development (SDD)** with HyperCode:\n\n1. **Specify** ‚Äì Detailed product requirements\n2. **Plan** ‚Äì Technical architecture and HyperCode structure\n3. **Tasks** ‚Äì Granular implementation tasks in HyperCode\n4. **Build** ‚Äì AI agents implement from tasks\n5. **Iterate** ‚Äì Feedback loops refine specifications\n\n---\n\n## üîß Technical Constraints\n\n- **Language:** HyperCode\n- **Target Runtimes:** [Your runtime: browser, Node, quantum simulator, etc.]\n- **Key Dependencies:** [List any HyperCode libraries or AI tools]\n- **Quality Gates:** [Tests, linting, performance targets]\n\n---\n\n## üåç For the Community\n\nThis project is **open-source** and invites collaboration. We welcome:\n- Issue reports and feature requests\n- Code contributions\n- Documentation improvements\n- Beta testing with AI agents\n\nSee CONTRIBUTING.md for guidelines.\n\n---\n\n## üìû Questions?\n\nIf an AI agent or contributor is unsure about direction, refer back to these principles:\n1. Is it spatial and minimal-noise?\n2. Does it work with multiple AI agents?\n3. Is it accessibility-first?\n4. Does it move HyperCode forward?\n\nIf yes to all ‚Üí ship it. ‚úÖ`;\n\n            return content;\n        }\n\n        function generateSpecifyPrompt() {\n            const projectName = document.getElementById('projectName').value || 'HyperCode Project';\n            const useCase = document.getElementById('useCase').value || 'general use case';\n\n            const content = `# /specify Prompt for HyperCode Projects\n\nYou are a specification expert for HyperCode projects. Your job is to translate vague ideas into detailed, actionable specifications that HyperCode developers and AI agents can build from.\n\n## Your Task\n\nWhen a user describes a feature, product idea, or problem, generate a comprehensive spec that:\n\n1. **Clarifies the problem** ‚Äì What are we solving?\n2. **Defines success** ‚Äì How do we know it works?\n3. **Considers neurodivergent UX** ‚Äì Is it ADHD-friendly? Dyslexia-accessible?\n4. **Maps to HyperCode** ‚Äì How does this fit HyperCode's spatial, minimal-noise philosophy?\n5. **Identifies AI implications** ‚Äì How will AI agents reason about this?\n\n## Output Format\n\n\\`\\`\\`\n## Specification: [Feature/Product Name]\n\n### 1. Problem Statement\n[What are we solving? Why does it matter?]\n\n### 2. User Stories\n- As a [user type], I want to [action] so that [benefit]\n- [Repeat for each user type]\n\n### 3. Success Criteria\n- [ ] [Testable criterion]\n- [ ] [Testable criterion]\n- [ ] [Testable criterion]\n\n### 4. HyperCode Architecture\n[How does this fit into HyperCode's spatial design?]\n\n### 5. Neurodivergent-First Design\n- ADHD: [How is this scannable and hyperfocus-enabling?]\n- Dyslexia: [How is this readable?]\n- Autism: [How does this minimize sensory/cognitive overload?]\n\n### 6. AI Agent Considerations\n[What should AI agents know to build this well?]\n\n### 7. Non-Goals\n[What are we NOT doing? (Important for scope control)]\n\\`\\`\\`\n\n## Context\n\n**Project:** ${projectName}\n**Use Case:** ${useCase}\n**Language:** HyperCode\n\nWhen responding:\n- Assume the user's idea is valid but incomplete\n- Ask clarifying questions if ambiguous\n- Reference HyperCode principles from the constitution\n- Suggest accessibility patterns for neurodivergent users\n- Identify potential AI-agent gotchas\n\nExample: If user says \"faster code generation\", ask:\n- Faster than what? (compared to Python? JavaScript? HyperCode today?)\n- Is performance the bottleneck or UX clarity?\n- How does \"faster\" map to HyperCode's spatial design?\n- Which neurodivergent profile benefits most?`;\n\n            return content;\n        }\n\n        function generatePlanPrompt() {\n            const projectName = document.getElementById('projectName').value || 'HyperCode Project';\n\n            const content = `# /plan Prompt for HyperCode Projects\n\nYou are a technical architect for HyperCode projects. Your job is to translate specifications into detailed technical plans that respect HyperCode's design philosophy.\n\n## Your Task\n\nGiven a specification, create a plan that:\n\n1. **Breaks down complexity** ‚Äì Reduce into manageable HyperCode modules\n2. **Prioritizes clarity** ‚Äì Spatial layout > performance tricks\n3. **Embraces HyperCode's paradigm** ‚Äì Quantum patterns, spatial logic, minimal syntax\n4. **Plans for AI implementation** ‚Äì Structure tasks so agents can execute independently\n5. **Validates against accessibility** ‚Äì Ensure plan doesn't create cognitive friction\n\n## Output Format\n\n\\`\\`\\`\n## Technical Plan: [Feature/Module Name]\n\n### 1. Architecture Overview\n[Diagram or spatial description of how modules connect]\n\n### 2. HyperCode Structure\n\\`\\`\\`hypercode\n[Pseudocode showing the spatial organization]\n\\`\\`\\`\n\n### 3. Module Breakdown\n- **Module A:** [Description]\n  - Inputs: [What it receives]\n  - Outputs: [What it produces]\n  - Spatial Flow: [How it sits in the larger system]\n\n- **Module B:** [Description]\n  - [Same structure]\n\n### 4. Design Decisions\n| Decision | Rationale | HyperCode Fit |\n|----------|-----------|---------------|\n| [Choice] | [Why?] | [Spatial/minimal-noise benefit] |\n\n### 5. Neurodivergent Accessibility Review\n- **Scanability:** [Is the plan visually organized?]\n- **Readability:** [No hidden complexity?]\n- **Hyperfocus-Fit:** [Can a dev lock in?]\n\n### 6. AI Implementation Notes\n[Guidance for AI agents building from this plan]\n\n### 7. Risks & Mitigations\n| Risk | Impact | Mitigation |\n|------|--------|------------|\n| [Issue] | [Why it matters] | [How to handle] |\n\\`\\`\\`\n\n## Context\n\n**Project:** ${projectName}\n**Paradigm:** Spatial, minimal-noise, neurodivergent-first\n**Target AI Agents:** Claude, Copilot, Cursor, custom models\n\nWhen planning:\n- Avoid deep nesting; prefer flat, scannable structures\n- Use HyperCode's spatial primitives (grids, flows, nodes)\n- Call out accessibility trade-offs explicitly\n- Give AI agents clear boundaries and success criteria\n- Reference the constitution if making philosophy calls`;\n\n            return content;\n        }\n\n        function generateTasksPrompt() {\n            const projectName = document.getElementById('projectName').value || 'HyperCode Project';\n\n            const content = `# /tasks Prompt for HyperCode Projects\n\nYou are a task breakdown expert for HyperCode projects. Your job is to transform plans into granular, atomic tasks that AI agents (or humans) can independently execute in HyperCode.\n\n## Your Task\n\nGiven a technical plan, generate tasks that:\n\n1. **Are atomic** ‚Äì One task = one focused HyperCode piece\n2. **Have clear acceptance criteria** ‚Äì AI agents know when they're done\n3. **Respect HyperCode syntax** ‚Äì Tasks assume HyperCode knowledge\n4. **Enable AI independence** ‚Äì Tasks include enough context to build without hand-holding\n5. **Preserve accessibility** ‚Äì No tricks, no hidden assumptions\n\n## Output Format\n\n\\`\\`\\`\n## Task Breakdown: [Feature/Module]\n\n### Task 1: [Clear, action-oriented name]\n**Acceptance Criteria:**\n- [ ] [Testable result]\n- [ ] [Testable result]\n- [ ] [Tests pass]\n\n**Context:**\n[What should AI agent know? Reference specification/plan if needed]\n\n**HyperCode Implementation Notes:**\n[Spatial structure, patterns, gotchas]\n\n**Resources:**\n- [Link to HyperCode docs]\n- [Example code]\n- [Related tasks]\n\n**Estimated Complexity:** [Simple/Medium/Complex]\n\n---\n\n### Task 2: [Next task]\n[Same structure]\n\n---\n\n### Task 3+: [Continue...]\n\\`\\`\\`\n\n## Context\n\n**Project:** ${projectName}\n**Language:** HyperCode\n**Workflow:** Each task feeds into next (or parallel if independent)\n\nWhen breaking down:\n- No task should take >4 hours for an AI agent (or human) to complete\n- Reference test files AI should write alongside code\n- Call out edge cases explicitly (neurodivergent brains often find them!)\n- Include \"Definition of Done\" checklist\n- Link to parent tasks for context\n\n### Example Task\n\n\\`\\`\\`\n### Task: Implement HyperCode Parser for Spatial Expressions\n\n**Acceptance Criteria:**\n- [ ] Parser handles grid notation: @(1,2) -> {x:1, y:2}\n- [ ] Parser handles flow notation: A -> B -> C\n- [ ] Parser handles node definitions: ~node(input) -> output\n- [ ] 95%+ test coverage\n- [ ] Error messages are clear and point to line/column\n\n**HyperCode Implementation Notes:**\nUse HyperCode's built-in tokenizer. Spatial expressions follow these rules:\n- Grid: @(row, col) or @row.col\n- Flow: token1 -> token2 -> token3 (left-to-right, not nested)\n- Nodes: ~name(inputs) -> outputs\n\n**Resources:**\n- HyperCode spec: sections 3.2-3.4\n- Example: tests/parser.hypercode\n\n**Estimated Complexity:** Medium\n\\`\\`\\`\n\n---\n\n## AI Agent Guidance\n\nWhen AI agents see these tasks, they should:\n1. Read the acceptance criteria first (know the goal)\n2. Check the HyperCode notes (understand the paradigm)\n3. Reference resources (learn HyperCode patterns)\n4. Write tests BEFORE code (TDD mindset)\n5. Validate accessibility (no surprise complexity)\n6. Commit with clear messages linking to task\n\n**Red flags for AI agents:**\n- Task mentions \"just make it work\" (too vague!)\n- Acceptance criteria are subjective (\"looks good\")\n- No linked tests or examples\n- Task mixes two separate concerns\n\nIf you see red flags, ask for clarification before building.`;\n\n            return content;\n        }\n\n        function updateOutputs() {\n            document.getElementById('constitutionOutput').textContent = generateConstitution();\n            document.getElementById('specifyOutput').textContent = generateSpecifyPrompt();\n            document.getElementById('planOutput').textContent = generatePlanPrompt();\n            document.getElementById('tasksOutput').textContent = generateTasksPrompt();\n        }\n\n        function switchTab(event, tabName) {\n            event.preventDefault();\n\n            // Hide all tabs\n            document.querySelectorAll('.tab-content').forEach(tab => {\n                tab.classList.remove('active');\n            });\n\n            // Remove active class from all buttons\n            document.querySelectorAll('.tab').forEach(tab => {\n                tab.classList.remove('active');\n            });\n\n            // Show selected tab\n            document.getElementById(tabName).classList.add('active');\n            event.target.classList.add('active');\n        }\n\n        function copyToClipboard(elementId) {\n            const text = document.getElementById(elementId).textContent;\n            navigator.clipboard.writeText(text).then(() => {\n                const btn = event.target;\n                const originalText = btn.textContent;\n                btn.textContent = '‚úÖ Copied!';\n                setTimeout(() => {\n                    btn.textContent = originalText;\n                }, 2000);\n            });\n        }\n\n        function downloadFile(filename, elementId) {\n            const text = document.getElementById(elementId).textContent;\n            const blob = new Blob([text], { type: 'text/markdown' });\n            const url = window.URL.createObjectURL(blob);\n            const a = document.createElement('a');\n            a.href = url;\n            a.download = filename;\n            document.body.appendChild(a);\n            a.click();\n            window.URL.revokeObjectURL(url);\n            document.body.removeChild(a);\n        }\n\n        // Initialize outputs on load\n        window.addEventListener('load', () => {\n            updateOutputs();\n        });\n\n        // Update outputs when inputs change\n        document.getElementById('projectName').addEventListener('input', updateOutputs);\n        document.getElementById('projectDesc').addEventListener('input', updateOutputs);\n        document.getElementById('author').addEventListener('input', updateOutputs);\n        document.getElementById('useCase').addEventListener('input', updateOutputs);\n\n        // Focus Mode Functions\n        function toggleFocusMode() {\n            document.body.classList.toggle('focus-active');\n            const btn = document.getElementById('focusToggle');\n            btn.textContent = document.body.classList.contains('focus-active') ? '‚ú®' : 'üéØ';\n            localStorage.setItem('focusMode', document.body.classList.contains('focus-active'));\n        }\n\n        // Step Navigation Functions\n        let currentStep = 1;\n\n        function goToStep(step) {\n            // Validate step is between 1-4\n            if (step < 1 || step > 4) return;\n\n            // Hide all step contents\n            document.querySelectorAll('.step-content').forEach(content => {\n                content.classList.remove('active');\n            });\n\n            // Remove active/completed from all steps\n            document.querySelectorAll('.step').forEach(s => {\n                s.classList.remove('active', 'completed');\n            });\n\n            // Mark previous steps as completed\n            for (let i = 1; i < step; i++) {\n                document.querySelector(`.step[data-step=\"${i}\"]`).classList.add('completed');\n            }\n\n            // Mark current step as active\n            document.querySelector(`.step[data-step=\"${step}\"]`).classList.add('active');\n\n            // Show current step content\n            document.querySelector(`.step-content[data-step=\"${step}\"]`).classList.add('active');\n\n            currentStep = step;\n            window.scrollTo({ top: 0, behavior: 'smooth' });\n        }\n\n        function nextStep() {\n            goToStep(currentStep + 1);\n        }\n\n        function previousStep() {\n            goToStep(currentStep - 1);\n        }\n\n        // Restore focus mode if it was active\n        if (localStorage.getItem('focusMode') === 'true') {\n            toggleFocusMode();\n        }\n    </script>\n</body>\n</html>\n",
