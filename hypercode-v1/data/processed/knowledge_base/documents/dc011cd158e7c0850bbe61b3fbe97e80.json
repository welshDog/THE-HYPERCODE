  "content_type": "text",
  "content": "<!DOCTYPE html>\n<html lang=\"en\">\n  <head>\n    <meta charset=\"UTF-8\" />\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n    <title>Research Hub{% block title %}{% endblock %}</title>\n    <link\n      href=\"https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css\"\n      rel=\"stylesheet\"\n    />\n    <link\n      rel=\"stylesheet\"\n      href=\"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css\"\n    />\n    <style>\n      .sidebar {\n        min-height: calc(100vh - 4rem);\n      }\n      .tag-cloud a {\n        display: inline-block;\n        margin: 2px;\n        padding: 2px 8px;\n        border-radius: 9999px;\n        background-color: #e2e8f0;\n        color: #4a5568;\n        text-decoration: none;\n        font-size: 0.875rem;\n        transition: all 0.2s;\n      }\n      .tag-cloud a:hover {\n        background-color: #cbd5e0;\n      }\n      .tag-cloud .tag-size-1 {\n        font-size: 0.875rem;\n      }\n      .tag-cloud .tag-size-2 {\n        font-size: 1rem;\n      }\n      .tag-cloud .tag-size-3 {\n        font-size: 1.125rem;\n      }\n      .tag-cloud .tag-size-4 {\n        font-size: 1.25rem;\n      }\n      .tag-cloud .tag-size-5 {\n        font-size: 1.5rem;\n      }\n      .content p,\n      .content ul,\n      .content ol {\n        margin-bottom: 1rem;\n      }\n      .content ul,\n      .content ol {\n        padding-left: 1.5rem;\n      }\n      .content ul {\n        list-style-type: disc;\n      }\n      .content ol {\n        list-style-type: decimal;\n      }\n      .content pre {\n        background-color: #f3f4f6;\n        padding: 1rem;\n        border-radius: 0.375rem;\n        overflow-x: auto;\n        margin-bottom: 1rem;\n      }\n      .content code {\n        background-color: #f3f4f6;\n        padding: 0.2rem 0.4rem;\n        border-radius: 0.25rem;\n        font-family: monospace;\n      }\n    </style>\n    {% block extra_css %}{% endblock %}\n  </head>\n  <body class=\"bg-gray-100\">\n    <!-- Header -->\n    <header class=\"bg-indigo-600 text-white shadow-md\">\n      <div\n        class=\"container mx-auto px-4 py-3 flex justify-between items-center\"\n      >\n        <h1 class=\"text-2xl font-bold\">\n          <a\n            href=\"{{ url_for('index') }}\"\n            class=\"hover:text-indigo-200 transition\"\n          >\n            <i class=\"fas fa-book-open mr-2\"></i>Research Hub\n          </a>\n        </h1>\n        <div class=\"flex items-center space-x-4\">\n          <a\n            href=\"{{ url_for('index') }}\"\n            class=\"hover:text-indigo-200 transition\"\n          >\n            <i class=\"fas fa-home mr-1\"></i> Home\n          </a>\n          <a\n            href=\"{{ url_for('list_tags') }}\"\n            class=\"hover:text-indigo-200 transition\"\n          >\n            <i class=\"fas fa-tags mr-1\"></i> Tags\n          </a>\n        </div>\n      </div>\n    </header>\n\n    <!-- Main Content -->\n    <main class=\"container mx-auto px-4 py-6\">\n      <div class=\"flex flex-col md:flex-row gap-6\">\n        <!-- Sidebar -->\n        <aside class=\"w-full md:w-1/4 lg:w-1/5\">\n          <div class=\"bg-white rounded-lg shadow-md p-4 mb-6\">\n            <h2 class=\"text-lg font-semibold mb-3 text-gray-800 border-b pb-2\">\n              <i class=\"fas fa-search mr-2\"></i>Search\n            </h2>\n            <form action=\"{{ url_for('search') }}\" method=\"get\" class=\"mb-4\">\n              <div class=\"relative\">\n                <input\n                  type=\"text\"\n                  name=\"q\"\n                  value=\"{{ search_query or '' }}\"\n                  class=\"w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400\"\n                  placeholder=\"Search research...\"\n                />\n                <button\n                  type=\"submit\"\n                  class=\"absolute right-2 top-2 text-gray-500 hover:text-indigo-600\"\n                >\n                  <i class=\"fas fa-search\"></i>\n                </button>\n              </div>\n            </form>\n\n            <h2 class=\"text-lg font-semibold mb-3 text-gray-800 border-b pb-2\">\n              <i class=\"fas fa-tags mr-2\"></i>Tags\n            </h2>\n            <div class=\"tag-cloud\">\n              {% for tag in all_tags %}\n              <a\n                href=\"{{ url_for('search', tag=tag) }}\"\n                class=\"tag-size-{{ range(1, 6)|random }}\"\n                style=\"background-color: {{ ['#e2e8f0', '#bee3f8', '#c6f6d5', '#fed7d7', '#feebc8', '#e9d8fd']|random }};\"\n              >\n                {{ tag }}\n              </a>\n              {% else %}\n              <p class=\"text-gray-500 text-sm\">No tags yet.</p>\n              {% endfor %}\n            </div>\n          </div>\n        </aside>\n\n        <!-- Main Content Area -->\n        <div class=\"w-full md:w-3/4 lg:w-4/5\">\n          <!-- Flash Messages -->\n          {% with messages = get_flashed_messages(with_categories=true) %} {% if\n          messages %} {% for category, message in messages %}\n          <div\n            class=\"mb-4 p-4 rounded-md {% if category == 'error' %}bg-red-100 text-red-700{% else %}bg-green-100 text-green-700{% endif %}\"\n          >\n            {{ message }}\n          </div>\n          {% endfor %} {% endif %} {% endwith %} {% block content %}{% endblock\n          %}\n        </div>\n      </div>\n    </main>\n\n    <!-- Footer -->\n    <footer class=\"bg-gray-800 text-white py-6 mt-8\">\n      <div class=\"container mx-auto px-4 text-center\">\n        <p>&copy; {{ now.year }} Research Hub. All rights reserved.</p>\n        <p class=\"text-gray-400 text-sm mt-2\">\n          Powered by Flask and Tailwind CSS\n        </p>\n      </div>\n    </footer>\n\n    <script>\n      // Add any global JavaScript here\n      document.addEventListener(\"DOMContentLoaded\", function () {\n        // Add any client-side functionality here\n      });\n    </script>\n    {% block extra_js %}{% endblock %}\n  </body>\n</html>\n",
