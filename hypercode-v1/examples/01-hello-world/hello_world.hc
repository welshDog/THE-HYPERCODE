# hello_world.hc

# This is a simple HyperCode program
greet "World"  # Prints: Hello, World!

# Basic math
result = 2 + 2
print "2 + 2 = {result}"

# Simple loop
repeat 3 times with i:
    print "Count: {i + 1}"

# Function definition
function add a b:
    return a + b

# Function call
sum = add 5 3
print "5 + 3 = {sum}"
