# EditorConfig for HyperCode
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# HyperCode source files
[*.hc]
indent_size = 2
max_line_length = 100

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files (allow trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefiles (require tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# HTML/CSS
[*.{html,css,scss}]
indent_size = 2

# XML
[*.xml]
indent_size = 2
